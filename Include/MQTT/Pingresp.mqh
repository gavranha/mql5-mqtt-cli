class CPingresp : public IControlPacket
  {
private:
   bool              IsControlPacket() {return true;}
public:
                     CPingresp();
                    ~CPingresp();
   static bool       IsPingresp(uchar &inpkt[]);
  };
//+------------------------------------------------------------------+
//|                                                                  |
//+------------------------------------------------------------------+
static bool CPingresp::IsPingresp(uchar &inpkt[])
  {
   return inpkt[0] == (PINGRESP << 4) ? true : false;
  }
