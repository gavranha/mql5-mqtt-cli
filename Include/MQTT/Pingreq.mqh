#include "IControlPacket.mqh"

//+------------------------------------------------------------------+
//|                                                                  |
//+------------------------------------------------------------------+
class CPingreq : public IControlPacket
  {
private:
   bool              IsControlPacket() {return true;}
   uint              m_remlen;
public:
                     CPingreq();
                    ~CPingreq();
   void              Build(uchar &pkt[]);
  };
//+------------------------------------------------------------------+
//|                                                                  |
//+------------------------------------------------------------------+
void CPingreq::Build(uchar &pkt[])
  {
   ArrayResize(pkt, 2);
   pkt[0] = PINGREQ << 4;
   pkt[1] = 0;
  }
